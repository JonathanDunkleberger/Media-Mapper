# Public Supabase (safe to expose in client)
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# TMDB (choose ONE: prefer v4 bearer token; fallback to v3 API key)
TMDB_V4_TOKEN=your-tmdb-v4-bearer-token
# TMDB_API_KEY=your-tmdb-v3-api-key

# IGDB / Twitch
TWITCH_CLIENT_ID=your-twitch-client-id
TWITCH_CLIENT_SECRET=your-twitch-client-secret

# Google Books
GOOGLE_BOOKS_API_KEY=your-google-books-api-key

# Algolia (if search enabled)
NEXT_PUBLIC_ALGOLIA_APP_ID=your-algolia-app-id
NEXT_PUBLIC_ALGOLIA_SEARCH_KEY=your-algolia-search-key

# Optional image base override
TMDB_IMG_BASE=https://image.tmdb.org/t/p

# Internal API (example custom header auth if used elsewhere)
# NEXT_PUBLIC_API_KEY=optional-public-api-key

# Deployment provided automatically on Vercel
# VERCEL_URL=auto

# Testing flag (set automatically in test runner)
# VITEST=true
